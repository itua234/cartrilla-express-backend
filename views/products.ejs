                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Sn.</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Name</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Price</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Stock</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Category</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Orders</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">View</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Edit</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Delete</h6>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="" style="background-color:white">
                        
                    </tbody>
                </table>
            </div>
            <!-- End Of Data Table -->
            <!-- Start Of Pagination -->
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-12 col-md-6 d-flex justify-content-md-start justify-content-center mb-md-0 mb-3">
                      <div class="d-flex align-items-center">
                        <div class="pagination">
                          <li class="page-item"><button class="page-link-item">1</button></li>
                          <li class="page-item"><button class="page-link-item">2</button></li>
                          <li class="page-item"><button class="page-link-item">3</button></li>
                          <li class="page-item"><button class="page-link-item">4</button></li>
                          <li class="page-item"><button class="page-link-item">5</button></li>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-sm-12 col-md-6 d-flex justify-content-md-end justify-content-center">
                        <div class="d-flex align-items-center">
                        <div>PAGE</div>
                          <form class="pagination-form" action="">
                            <select class="pagination-form-select">
                              
                            </select>
                          </form>
                        <div>OF <span class="pagination-pages-count"></span></div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            <!-- End Of Pagination -->
          </div>
        </div>
      <!--  End of Row 1 -->
      
      <!-- Start Of Modal -->
      <div class="cr-modal" id="delete-product-modal">
        <div class="cr-modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete Modal</h5>
            <button type="button" class="close" data-dismiss="delete-product-modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h5 class="card-title mb-9 fw-semibold"></h5>
            <p>Are you sure you want to delete this product?</p>
          </div>
          <div class="modal-footer">
            <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>-->
            <button type="button" class="btn btn-primary" data-id="">Yes</button>
          </div>
        </div>
      </div>
      <!-- End Of Modal -->
    </div>

  </div>
</div>
